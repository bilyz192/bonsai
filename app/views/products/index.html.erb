

<section id="product">
  <div class="container">
    <div class="row">
      <h3 class="title_product">Sản Phẩm</h3>
      <% @products.each do |product| %>
        <div class="col-sm4 col-md-3">
          <div class="thumbnail">
            <%= image_tag("img.jpg" , :alt => "img-product") %>
            <div class="caption">
              <h3><%= product.title %></h3>
              <p><%= product.content %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
