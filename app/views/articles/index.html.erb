
<section>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="col-lg-10"><h3 class="panel-title">Danh sách sản phẩm <span><%= @count %></span></h3> </div> <div class="col-lg-2"><%= link_to 'Thêm Sản phẩm', new_article_path %></div>
    </div>
    <div class="panel-body">
      <table class="table">
        
          <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả ngắn</th>
            <th>Thể loại</th>
            <th>Chức năng</th>
          </tr>  
        <% @articles.each do |a| %>
          </tr>  
          <td><%= a.title %></td>
          <td><%= a.content %></td>
              <td><%= a.category.name %></td>

          <td>
            <%= link_to 'Show', article_path(a) %>
            <%= link_to 'Edit', edit_article_path(a) %>
            <%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %>
         </td>
        <% end %>
      </table>

  </div>
</section>