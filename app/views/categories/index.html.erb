
<section>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="col-lg-10"><h3 class="panel-title">Danh sách thể loại <span><%= @count %></span></h3> </div> <div class="col-lg-2"><%= link_to 'Thêm Thể loại', new_category_path %></div>
    </div>
    <div class="panel-body">
      <table class="table">
        
          <tr>
            <th>Tên thể loại</th>
            <th>Chức năng</th>
          </tr>  
        <% @categories.each do |c| %>
          </tr>  
          <td><%= c.name %></td>
          <td>
            <%= link_to 'Show', category_path(c) %>
            <%= link_to 'Edit', edit_category_path(c) %>
            <%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %>
         </td>
        <% end %>
      </table>

  </div>
</section>