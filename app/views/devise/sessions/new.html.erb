<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <section id="logo">
          <div>Site<span>Random</span></div>
        </section>   
      </div>
      <div class="col-xs-6">
        <section id="register">
          <div class="sign_in">
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true , placeholder: "username", class: 'input' %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "off" , placeholder: "password", class: 'input' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me, class: 'check-box' %>
                  <%= f.label :remember_me, class: 'checkbox_title' %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in" , class: 'input' %>
              </div>
            <% end %>
          </div>
        </section> 
      </div>
    </div>
  </div>
</div>